<div class="locked-in-maneuvers">
    {{#each maneuvers as |maneuver tokenId|}}
    <div class="locked-in-maneuver">
        <div class="combatant-name">
            <a class="token-link" data-token-id="{{tokenId}}">{{maneuver.combatant.name}}</a>
        </div>
        <div class="fighting-style-maneuver
            {{#if maneuver.maneuver.data.data.rebalancing}}rebalancing{{/if}}
            {{#if maneuver.maneuver.data.data.mastery}}mastery{{/if}}
            {{#if maneuver.maneuver.data.data.selected}}selected{{/if}}
            {{#if maneuver.maneuver.data.data.locked}}faded{{/if}}
            {{#if maneuver.maneuver.data.data.locked-in}}locked-in{{/if}}"
            data-entity-id="{{maneuver.maneuver.id}}"
        >
        
            <div class="maneuver-magic-attack" title="{{localize "SK.LABEL.MAGIC_ATTACK"}}">
                {{#each maneuver.maneuver.data.data.magic-attack as |attack key|}}
                    {{#if @first}}<i class="fas fa-magic"></i>{{else}}/{{/if}}
                    {{#if (isNumber attack.die)}}
                        d{{attack.die}}
                    {{else}}
                        d{{localize (sk_strconcat "SK.STAT.SHORT." attack.die)}}
                    {{/if}}
                    {{#unless (eq attack.vs 'defense')}}{{localize "SK.LABEL.VS"}} {{localize (sk_strconcat "SK.STAT.SHORT." attack.vs)}}{{/unless}}
                {{/each}}
            </div>
            <div class="maneuver-magic-defense" title="{{localize "SK.LABEL.MAGIC_DEFENSE"}}">
                {{#each maneuver.maneuver.data.data.magic-defense as |defense key|}}
                    {{#if @first}}<i class="fas fa-shield-virus"></i>{{else}}/{{/if}}
                    {{#if (isNumber defense)}}
                        d{{defense}}
                    {{else}}
                        d{{localize (sk_strconcat "SK.STAT.SHORT." defense)}}
                    {{/if}}
                {{/each}}
            </div>
            <div class="maneuver-attack" title="{{localize "SK.LABEL.ATTACK"}}">
                {{#each maneuver.maneuver.data.data.attack as |attack key|}}
                    {{#if @first}}<i class="fas fa-gavel"></i>{{else}}/{{/if}}
                    {{#if (isNumber attack.die)}}
                        d{{attack.die}}
                    {{else}}
                        d{{localize (sk_strconcat "SK.STAT.SHORT." attack.die)}}
                    {{/if}}
                    {{#unless (eq attack.vs 'defense')}}{{localize "SK.LABEL.VS"}} {{localize (sk_strconcat "SK.STAT.SHORT." attack.vs)}}{{/unless}}
                {{/each}}
            </div>
            <div class="maneuver-defense" title="{{localize "SK.LABEL.DEFENSE"}}">
                {{#each maneuver.maneuver.data.data.defense as |defense key|}}
                    {{#if @first}}<i class="fas fa-shield-alt"></i>{{else}}/{{/if}}
                    {{#if (isNumber defense)}}
                        d{{defense}}
                    {{else}}
                        d{{localize (sk_strconcat "SK.STAT.SHORT." defense)}}
                    {{/if}}
                {{/each}}
            </div>
            <div class="maneuver-name">
                {{maneuver.maneuver.name}} {{#if maneuver.maneuver.data.data.must-rebalance}}(r){{/if}}
            </div>
            <div class="maneuver-description">
                {{~maneuver.maneuver.data.data.short-description~}}
            </div>
        </div>
    </div>
    {{/each}}
</div>