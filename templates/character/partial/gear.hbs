<div class="item gear-item" data-entity-id="{{gear.id}}">
    <div class="gear-item-quality" title="{{localize "SK.LABEL.QUALITY"}}">
        {{gear.data.data.quality.value}}
    </div>
    <div class="gear-item-name" title="{{gear.name}}">
        {{gear.name}}
    </div> 
    <div class="item-controls-left">
        <a class="item-control item-delete" title="{{localize 'SK.BUTTON.DELETE'}}"><i class="fas fa-trash"></i></a>
    </div>
    <div class="gear-requirements">
        {{#each gear.data.data.stat-requirement as |value statIdentifier|}}
            {{#if value}}
            <span>{{value}}</span>
            {{/if}}
        {{/each}}
    </div>
    <div class="gear-item-wealth-level" title="{{localize "SK.LABEL.PURCHASED_WITH"}}">
        <span>{{localize "SK.STAT.SHORT.WEALTH_LEVEL"}}</span>
        <select>
            {{#each gear.data.data.wealthLevels as |displayValue value|}}
            <option value="{{value}}">{{displayValue}}</option>
            {{/each}}
        </select>
    </div>
    <div class="item-controls-right">
        <a class="item-control item-edit" title="{{localize 'Edit'}}"><i class="fas fa-edit"></i></a>
        <a class="item-control item-post" title="{{localize 'SK.BUTTON.POST_TO_CHAT'}}"><i class="fas fa-comment"></i></a>
    </div>
</div>