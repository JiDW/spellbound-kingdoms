<div class="item gear-item" data-entity-id="{{gear.id}}">
    <div class="gear-item-quality" title="{{localize "SK.LABEL.QUALITY"}}">
        {{gear.data.data.quality.value}}
    </div>
    <div class="gear-item-name" title="{{gear.name}}">
        {{gear.name}}
    </div> 
    <div class="item-controls-left">
        <a class="item-control item-delete" title="{{localize 'SK.BUTTON.DELETE'}}"><i class="fas fa-trash"></i></a>
    </div>
    <div class="gear-requirements {{#unless gear.data.data.requirements-met}}red{{/unless}}" title="{{localize 'SK.LABEL.STAT_REQUIREMENTS'}}">
        {{#each gear.data.data.stat-requirement as |value statIdentifier|}}
            {{#if value}}
            <span>{{localize (sk_strconcat "SK.STAT.SHORT." statIdentifier)}} {{value}}</span>
            {{/if}}
        {{/each}}
    </div>
    <div class="gear-item-wealth-level" title="{{localize "SK.LABEL.PURCHASED_WITH"}}">
        <span>{{localize "SK.STAT.SHORT.WEALTH_LEVEL"}}</span>
        <select>
            <optgroup label="{{localize 'SK.LABEL.AVAILABLE'}}">
                <option value="0" {{#if (intEq 0 ../gear.data.data.wealth-level.slot)}}selected="selected"{{/if}}>
                    {{localize "SK.LABEL.GOLD"}}
                </option>
            {{#if (gt gear.data.data.wealth-level.value currentWealthLevel)}}
            </optgroup>
            <optgroup label="{{localize 'SK.LABEL.LOCKED'}}">
            {{/if}}
            {{#each (sequence gear.data.data.wealth-level.value 20) as |value|}}
                {{#unless (eq value 0)}}
                <option value="{{value}}" {{#if (intEq value ../gear.data.data.wealth-level.slot)}}selected="selected"{{/if}}>
                   {{value}}
                </option>
                {{/unless}}
                {{#if (eq value ../currentWealthLevel)}}
            </optgroup>
            <optgroup label="{{localize 'SK.LABEL.LOCKED'}}">
                {{/if}}
            {{/each}}
            </optgroup>
        </select>
    </div>
    <div class="item-controls-right">
        <a class="item-control item-edit" title="{{localize 'Edit'}}"><i class="fas fa-edit"></i></a>
        <a class="item-control item-post" title="{{localize 'SK.BUTTON.POST_TO_CHAT'}}"><i class="fas fa-comment"></i></a>
    </div>
</div>