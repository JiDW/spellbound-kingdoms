<div class="item talent-item" data-entity-id="{{talent.id}}">
    <div class="talent-image">
        <img class="profile-img" src="{{talent.img}}" data-edit="img" title="{{talent.name}}" />
    </div>

    <div class="talent-item-name">
        {{talent.name}}
    </div>
    <div class="talent-item-description">{{talent.data.data.short-description}}</div>

    <div class="item-controls-left">
        <a class="item-control item-delete" title="{{localize 'SK.BUTTON.DELETE'}}"><i class="fas fa-trash"></i></a>
    </div>
    <div class="talent-item-level">{{localize talent.data.data.levelString}}</div>    
    <div class="item-controls-right">
        <a class="item-control item-edit" title="{{localize 'Edit'}}"><i class="fas fa-edit"></i></a>
        <a class="item-control item-post" title="{{localize 'SK.BUTTON.POST_TO_CHAT'}}"><i class="fas fa-comment"></i></a>
    </div>
</div>