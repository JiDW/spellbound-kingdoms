
<select name="{{name}}">
    {{#select selectValue}}
    <optgroup label="{{localize "SK.LABEL.DICE"}}">
        <option value="2">d2</option>
        <option value="4">d4</option>
        <option value="6">d6</option>
        <option value="8">d8</option>
        <option value="10">d10</option>
        <option value="12">d12</option>
        <option value="20">d20</option>
    </optgroup>
    <optgroup label="{{localize "SK.LABEL.STATS"}}">
        <option value="strength">{{localize "SK.STAT.SHORT.STRENGTH"}}</option>
        <option value="quickness">{{localize "SK.STAT.SHORT.QUICKNESS"}}</option>
        <option value="reason">{{localize "SK.STAT.SHORT.REASON"}}</option>
        <option value="charisma">{{localize "SK.STAT.SHORT.CHARISMA"}}</option>
        <option value="magic">{{localize "SK.STAT.SHORT.MAGIC"}}</option>
        <option value="heart">{{localize "SK.STAT.SHORT.HEART"}}</option>
    </optgroup>
    {{/select}}
</select>